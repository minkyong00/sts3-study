<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="springaop" />

	<aop:config>
		<aop:aspect id="printMethodNameLogAspect" ref="logAspect">
			<aop:after pointcut="execution(* springaop.service..*Impl.*(..))" 
				method="afterGetPersonMethod"/>
			<aop:before pointcut="execution(* springaop.service..*Impl.*(..))" 
				method="beforeListPersonMethod"/>
			<aop:around pointcut="execution(* springaop.service..*Impl.*(..))"
				method="aroundPersonMethod"/>
		</aop:aspect>
	</aop:config>
	
	<bean id="logAspect" class="springaop.aspect.LogAspect" />

</beans>
