package springdi_xml_exam.main;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.GenericXmlApplicationContext;

import springdi_xml_exam.bean.Student;

public class StudentMain {

	public static void main(String[] args) {
		
		ApplicationContext context 
			= new GenericXmlApplicationContext("springdi_xml_exam/conf/applicationContext.xml");
		
		Student studentHong = (Student)context.getBean("studentHong");
		Student studentKang = (Student)context.getBean("studentKang");
		Student studentLee = (Student)context.getBean("studentLee");
		
		System.out.println("*** 성적표 ***");
		System.out.println(studentHong);
		System.out.println(studentKang);
		System.out.println(studentLee);
		
	}
	
}
