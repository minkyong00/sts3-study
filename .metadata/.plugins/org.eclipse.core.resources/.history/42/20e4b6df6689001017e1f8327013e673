package springdi_anno_exam.main;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.GenericXmlApplicationContext;

import springdi_anno_exam.bean.Student;

public class StudentMain {

	public static void main(String[] args) {
		
		ApplicationContext context
			= new GenericXmlApplicationContext("springdi_anno_exam/conf/applicationContext.xml");
		
		Student studentHong = (Student)context.getBean("student");
		studentHong.setName("홍길동");
		studentHong.getScore().setKor(100);
		studentHong.getScore().setEng(100);
		studentHong.getScore().setMath(100);
		
		System.out.println(studentHong);
		
	}
	
}
