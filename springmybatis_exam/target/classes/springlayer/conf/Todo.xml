<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="todo">

	<select id="listTodo" resultType="Todo">
		select * from toDo order by todoId dEsc
	</select>

	<select id="getTodo" parameterType="int" resultType="Todo">
		select * from toDo where todoId=#{todoId}
	</select>
	
	<insert id="insertTodo" parameterType="Todo">
		insert into toDo values(seq_todo.nextval, #{todoContent}, sysTimestamp, 'N')
	</insert>
	
	<update id="updateTodo" parameterType="Todo">
		update toDo set todoContent=#{todoContent} where todoId=#{todoId}
	</update>
	
	<delete id="deleteTodo" parameterType="Todo">
		delete toDo where todoId=#{todoId}
	</delete>


</mapper>